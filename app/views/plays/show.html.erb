<h1><%= @play.title %></h1>
<h4><%= @play.category.name %></h4>
<h3><%= @play.description %></h3>
<p><i><%= @play.director %></i></p>

<div class="links btn-group">
  <% if user_signed_in? %>
    <% if @play.user_id == current_user.id %>
      <%= link_to 'Edit' , edit_play_path(@play) %>
      <%= link_to 'Delete' , play_path(@play), method: :delete %>
    <% end %>
  <% end %>
</div>

